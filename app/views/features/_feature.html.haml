%tr{:id => "feature_#{feature.id}"}
  %td=feature.id
  %td
    = form_for feature, remote: true do |f|
      = f.check_box :visible
      = f.submit "Update"
  %td=feature.nick
  %td=colorbox(feature.color)
  %td=feature.name
  %td=feature.used
  %td=feature.total
  %td=feature.percent
  %td=time_fmt(feature.updated_at)
  %td
    =link_to edit_with_icon("Edit"), edit_feature_path(feature), class: 'btn btn-info btn-xs', remote: true
    =link_to show_with_icon("Details"), feature_path(feature), class: 'btn btn-info btn-xs'




